extends siteLayout
include mixins/gameDisplay

block content
  .row
    .col
      .d-flex.flex-row.justify-content-center
        h1 Games
  .row
    if gameList.length > 0
      each game in gameList
        +gameDisplay(game)
    else
      p There are no games.
        a(href="/games/new") You should add one!